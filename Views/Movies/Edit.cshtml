@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelaeseDate" class="control-label"></label>
                <input asp-for="RelaeseDate" class="form-control" />
                <span asp-validation-for="RelaeseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option>Kinh Di</option>
                    <option>Hanh Dong</option>
                    <option>Tinh Cam</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckRadio" class="control-label"></label><br />
                <label>
                    <input type="radio" asp-for="CheckRadio" style="height:35px; width:35px; vertical-align: middle;" value="Mot" class="form-control" checked />Mot<br />
                </label>
                <label>
                    <input type="radio" asp-for="CheckRadio" style="height:35px; width:35px; vertical-align: middle;" value="Hai" class="form-control" />Hai<br />
                </label>
                <label>
                    <input type="radio" asp-for="CheckRadio" style="height:35px; width:35px; vertical-align: middle;" value="Ba" class="form-control" />Ba<br />
                </label>
                <span asp-validation-for="CheckRadio" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <label asp-for="TextArea" class="control-label"></label>
                <textarea asp-for="TextArea" style="height:80px;width:300px" class="form-control"></textarea>
                <span asp-validation-for="TextArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" class="form-control"/>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
